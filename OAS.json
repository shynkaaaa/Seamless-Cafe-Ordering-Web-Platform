{
    "openapi": "3.0.0",
    "info": {
        "title": "Demo",
        "version": "1.0.0"
    },
    "paths": {
        "/coffees": {
            "get": {
                "summary": "Retrieve a list of coffees",
                "responses": {
                    "200": {
                        "description": "A list of coffees",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Coffee"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Coffee": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "price": {
                        "type": "number",
                        "format": "integer"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
